{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "Happiness Scores for 2019",
  "data": {
    "url": "https://raw.githubusercontent.com/JNalder/FIT3179/main/2019.csv"
  },
  "params": [
    {
      "name": "Score_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 2.1,
        "max": 7.7,
        "step": 0.05,
        "name": "Minimum Score: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.GDP_Per_Capita > 0"},
    {"filter": "datum.Score > Score_Above"},
    {"filter": "datum.Social_Support > 0"},
    {"calculate": "datum.Rank", "as": "Rank out of 157 Countries"}
  ],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "GDP_Per_Capita",
      "type": "quantitative",
      "title": "GDP",
      "axis": {"tickCount": 4},
      "scale": {"type": "linear", "domain": [0, 2]}
    },
    "y": {
      "field": "Social_Support",
      "type": "quantitative",
      "axis": {"tickCount": 4},
      "scale": {"type": "linear", "domain": [0, 2]}
    },
    "color": {
      "field": "Rank",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [125, 100, 50, 10, 1],
        "range": [
          "#de2d26",
          "#fc9272",
          "#fee0d2",
          "#f7fcb9",
          "#addd8e",
          "#31a354"
        ]
      }
    },
    "opacity": {"value": 0.75},
    "size": {
      "field": "Score",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [2.5, 4, 5, 6, 7.5],
        "range": [10, 25, 50, 100, 175, 300]
      },
      "legend": {"format": ".1s"}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {
        "field": "Rank out of 157 Countries",
        "type": "quantitative",
        "format": ","
      },
      {"field": "Score", "type": "quantitative", "format": ","},
      {"field": "GDP_Per_Capita", "type": "quantitative", "format": ","},
      {"field": "Social_Support", "type": "quantitative", "format": ","},
      {
        "field": "Healthy_Life_Expectancy",
        "type": "quantitative",
        "format": ","
      },
      {
        "field": "Freedom_To_Make_Life_Choices",
        "type": "quantitative",
        "format": ","
      },
      {"field": "Generosity", "type": "quantitative", "format": ","},
      {
        "field": "Perceptions_Of_Corruption",
        "type": "quantitative",
        "format": ","
      }
    ]
  },
  "config": {}
}